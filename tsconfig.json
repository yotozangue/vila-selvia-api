{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "baseUrl": ".",
        "target": "ES2020",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "module": "commonjs",
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
              "@core/*": [
                "src/core/*"
              ],
              "@routes/*": [
                "src/routes/*"
              ]
        },
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
